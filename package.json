{
  "name": "action-deployment-manifest",
  "description": "git action that maintains a deployment manifest of the matrix of environments, deployables, versions, and statuses",
  "version": "0.0.0",
  "author": "dkhunt27",
  "type": "module",
  "private": false,
  "homepage": "https://github.com/actions/dkhunt27/action-deployment-manifest#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/dkhunt27/action-deployment-manifest.git"
  },
  "bugs": {
    "url": "https://github.com/actions/dkhunt27/action-deployment-manifest/issues"
  },
  "keywords": [
    "actions",
    "git",
    "deployment",
    "manifest",
    "github",
    "ci",
    "cd",
    "github-actions"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24.10.0"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@aws-sdk/client-dynamodb": "^3.925.0",
    "@aws-sdk/lib-dynamodb": "^3.925.0",
    "@aws-sdk/util-dynamodb": "^3.936.0",
    "async": "^3.2.6",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@github/local-action": "^6.0.2",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/async": "^3.2.25",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.52.5",
    "ts-jest": "^29.4.5",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
